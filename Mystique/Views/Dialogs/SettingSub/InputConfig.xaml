<UserControl x:Class="Mystique.Views.Dialogs.SettingSub.InputConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <StackPanel Orientation="Vertical">
        <CheckBox Margin="4,2"
                  Content="入力補助を利用する(_S)"
                  IsChecked="{Binding UseInputSuggesting}" />
        <CheckBox Margin="4,2"
                  Content="文頭の空白文字を削除する(_D)"
                  IsChecked="{Binding TrimBeginSpace}" />
        <CheckBox Margin="4,2"
                  Content="手動入力されたハッシュタグを自動でバインドする(_B)"
                  IsChecked="{Binding AutoBindInputtedHashtag}" />
    </StackPanel>
</UserControl>
